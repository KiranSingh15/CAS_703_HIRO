{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenCV Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "$RGB_2_GS/*.cpp",
                "-o", "program",
                "`pkg-config --cflags --libs opencv4`"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}